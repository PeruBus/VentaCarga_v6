<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">
    <LinearLayout
        android:orientation="vertical" android:layout_width="0dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:layout_height="50dp"
            android:textSize="18dp"
            android:layout_marginBottom="30dp"
            android:text="VENTA DE CARGA"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="SERIE:"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="CORRELATIVO:"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_height="48dp"
            android:text="" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="TIPO PRODUCTO:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="TARIFA ADICIONAL:"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="CANTIDAD:"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical" android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp">

        <Button
            android:id="@+id/button_leerQR"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:text="Leer QR"
            android:textColor="@color/colorWhite" />

        <EditText
            android:id="@+id/editText_serie"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:text="" />

        <EditText
            android:id="@+id/editText_correlativo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:text="" />

        <Button
            android:id="@+id/button_validar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Validar"
            android:textColor="@color/colorWhite"/>

        <Spinner
            android:id="@+id/spinner_tipoProducto"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <EditText
            android:id="@+id/editText_tarifaCarga"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:enabled="false"
            android:inputType="numberDecimal"
            android:text="0" />

        <EditText
            android:id="@+id/editText_cantidad"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:enabled="false"
            android:inputType="numberDecimal"
            android:text="1" />

        <Button
            android:id="@+id/button_imprimirBoletoCarga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Imprimir"
            android:textColor="@color/colorWhite" />
    </LinearLayout>



</LinearLayout>