<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

       <!-- <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="18dp"
            android:layout_marginBottom="20dp"
            android:text="VENTA DE PASAJE"
            android:textStyle="bold"/>-->

        <TextView
            android:id="@+id/textView_empresa"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:text="EMPRESA:"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView_rumbo"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:text="RUMBO:"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView_servicio"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:text="SERVICIO:"
            android:textStyle="bold"/>

       <!-- <TextView
            android:id="@+id/textView_origen"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:text="ORIGEN:"
            android:textStyle="bold"/>-->

        <TextView
            android:id="@+id/textView_destino"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:text="DESTINO:"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView_tarifa"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:text="TARIFA:"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView_tarifaAdicional"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:text="TARIFA ADICIONAL:"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/textView_TTIPO_DOCU"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:text="TIPO DOCUMENTO:"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:text="DOCUMENTO IDENTIDAD"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textNoClie"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:text="CLIENTE:"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/textRUC"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:text="RUC:"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/textRasonSocial"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:text="RASON SOCIAL:"
            android:textStyle="bold"/>


    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

      <!--  <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginBottom="15dp"
            android:text="" />-->

        <Spinner
            android:id="@+id/spinner_empresa"
            android:layout_width="match_parent"
            android:layout_height="39dp" />

        <Spinner
            android:id="@+id/spinner_rumbo"
            android:layout_width="match_parent"
            android:layout_height="39dp" />

        <Spinner
            android:id="@+id/spinner_servicio"
            android:layout_width="match_parent"
            android:layout_height="39dp" />

       <!-- <EditText
            android:id="@+id/editText_origen"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:textAlignment="center"
            android:enabled="false"/>-->

        <Spinner
            android:id="@+id/spinner_destino"
            android:layout_width="match_parent"
            android:layout_height="39dp" />

        <EditText
            android:id="@+id/editText_tarifa"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:enabled="false"
            android:textAlignment="center"
            android:text="0" />

        <EditText
            android:id="@+id/editText_tarifaAdicional_bol"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:ems="10"
            android:textAlignment="center"
            android:inputType="numberDecimal" />
        <Spinner
            android:id="@+id/spinner_TipoDocu_bol"
            android:layout_width="match_parent"
            android:layout_height="39dp" />

        <EditText
            android:id="@+id/editText_dni"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:ems="10"
            android:textAlignment="center"
            android:inputType="number" />

        <EditText
            android:id="@+id/editText_noClie_NoRuc"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:ems="10"
            android:textAlignment="center"
            android:inputType="textPersonName" />
        <EditText
            android:id="@+id/editText_RUC"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:ems="10"
            android:textAlignment="center"
            android:inputType="number" />
        <EditText
            android:id="@+id/editText_RasonSocial"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:ems="10"
            android:textAlignment="center"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button_imprimirBoleto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Imprimir"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>

</LinearLayout>