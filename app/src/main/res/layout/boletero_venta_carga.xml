<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="18dp"
            android:layout_marginBottom="40dp"
            android:text="CARGA"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView_empresa"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="EMPRESA:"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView_rumbo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="RUMBO:"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="ORIGEN:"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="DESTINO:"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="DNI/RUC:"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="TIPO PRODUCTO:"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="TARIFA BASE:"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="TARIFA ADICIONAL:"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="CANTIDAD:"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="40dp"
            android:text="" />

        <EditText
            android:id="@+id/editText_empresa"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:enabled="false"
            android:text="" />

        <EditText
            android:id="@+id/editText_rumbo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:enabled="false"
            android:text="" />

        <EditText
            android:id="@+id/editText_origenCarga"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:enabled="false"
            android:text="" />

        <EditText
            android:id="@+id/editText_destinoCarga"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:enabled="false"
            android:text="" />

        <EditText
            android:id="@+id/editText_dniCarga"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:enabled="false"/>

        <Spinner
            android:id="@+id/spinner_tipoProducto"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <EditText
            android:id="@+id/editText_tarifaBase"
            android:layout_width="match_parent"
            android:enabled="false"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="" />

        <EditText
            android:id="@+id/editText_tarifaCarga"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="0" />

        <EditText
            android:id="@+id/editText_cantidad"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="1" />

        <Button
            android:id="@+id/button_imprimirBoletoCarga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Imprimir"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>



</LinearLayout>